/* index.wxss */
.index {
  min-height: 100vh;
  background-color: #8BC34A;
  text-align: center;
  padding: 100rpx 100rpx;
  font-size: 24px;
  color: white;
}

image{
  margin: 0 auto;
  margin-top: 10px;
  width: 100%;
  height: 100%;
}

.image-container{
  font-size: 20px;
  height: 400rpx;
  width: 550rpx;
  border: 10rpx solid #FF5252;
  margin: 20rpx auto 0 auto;
  border-radius: 20px;
  padding: 0rpx 10rpx;

}

#space {
  height: 50px;
}

.introduction{
  font-size: 20px;
  width: 450rpx;
  border: 10rpx solid #FF5252;
  margin: 20rpx auto 0 auto;
  border-radius: 20px;
  padding: 20rpx 40rpx;

 
}

.location {
  border: 2rpx solid #FF5252;
  border-radius: 50px;
  width: 250rpx;
  margin: 20rpx auto 0 auto;
  padding: 20rpx 40rpx;
  background-color: #FF5252;
}